{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pagenode",
  "version": "0.1.0",
  "identifier": "com.pagenode.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PageNode",
        "width": 1280,
        "height": 800,
        "minWidth": 960,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src http://127.0.0.1:*; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src https://fonts.gstatic.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/pagenode-backend"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVDNDVGMUFCNDhDQzI0OTMKUldTVEpNeElxL0ZGN0JtaHpubzVkdzhnM044NjUyT2VoS3g0UGdQWS9kZVd5Wi9scWQ4SGVkREwK",
      "endpoints": [
        "https://github.com/GatsLee/PageNode/releases/latest/download/latest.json"
      ]
    }
  }
}
